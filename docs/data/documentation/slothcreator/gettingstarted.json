\/name","type":"topic","abstract":[{"type":"text","text":"The name of the sloth."}],"kind":"symbol","role":"symbol","title":"name","fragments":[{"text":"var","kind":"keyword"},{"text":" ","kind":"text"},{"text":"name","kind":"identifier"},{"text":": ","kind":"text"},{"text":"String","kind":"typeIdentifier","preciseIdentifier":"s:SS"}],"identifier":"doc:\/\/SlothCreator\/documentation\/SlothCreator\/Sloth\/name"},"doc://SlothCreator/documentation/SlothCreator/Sloth/Food":{"fragments":[{"kind":"keyword","text":"struct"},{"text":" ","kind":"text"},{"text":"Food","kind":"identifier"}],"identifier":"doc:\/\/SlothCreator\/documentation\/SlothCreator\/Sloth\/Food","role":"symbol","url":"\/documentation\/slothcreator\/sloth\/food","type":"topic","kind":"symbol","title":"Sloth.Food","navigatorTitle":[{"text":"Food","kind":"identifier"}],"abstract":[{"text":"Food that a sloth can consume.","type":"text"}]},"doc://SlothCreator/tutorials/SlothCreator":{"kind":"overview","url":"\/tutorials\/slothcreator","role":"overview","abstract":[{"type":"text","text":"Create, catalog, and care for sloths using SlothCreator. Get started with SlothCreator by building the demo app "},{"inlineContent":[{"type":"text","text":"Slothy"}],"type":"emphasis"},{"type":"text","text":"."}],"type":"topic","title":"Meet SlothCreator","identifier":"doc:\/\/SlothCreator\/tutorials\/SlothCreator"},"doc://SlothCreator/documentation/SlothCreator":{"title":"SlothCreator","kind":"symbol","abstract":[{"text":"Catalog sloths you find in nature and create new adorable virtual sloths.","type":"text"}],"type":"topic","role":"collection","identifier":"doc:\/\/SlothCreator\/documentation\/SlothCreator","url":"\/documentation\/slothcreator"},"doc://SlothCreator/documentation/SlothCreator/Habitat/comfortLevel":{"identifier":"doc:\/\/SlothCreator\/documentation\/SlothCreator\/Habitat\/comfortLevel","abstract":[{"type":"text","text":"An indicator of how comfortable a sloth might find the habitat."}],"kind":"symbol","role":